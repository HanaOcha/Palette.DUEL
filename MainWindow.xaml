            <Canvas Canvas.Left="720" Canvas.Top="282" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Width="200" Height="200">
                <Rectangle Width="210" Height="318" Canvas.Left="0" Canvas.Top="-190" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Rectangle Width="200" Height="308" Canvas.Left="5" Canvas.Top="-185" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <colorpicker:ColorSliders x:Name="paletteColorSlider" ShowAlpha="False" HorizontalAlignment="Center" Height="94" VerticalAlignment="Top"
                                          Canvas.Top="-5" Canvas.Left="6"/>
                <colorpicker:HexColorTextBox x:Name="paletteColorHex" Canvas.Left="2" Canvas.Top="3" Height="24" Width="98"
                             HorizontalAlignment="Center" VerticalAlignment="Top"
                             FontSize="13" ShowAlpha="False"/>
                <colorpicker:SquarePicker x:Name="paletteColorWheel" Canvas.Left="18" Canvas.Top="-177" Height="173" Width="174"
                VerticalAlignment="Top" HorizontalAlignment="Center"/>
            </Canvas>
            <Canvas Canvas.Left="720" Canvas.Top="428" Width="210" Height="60">
                <Rectangle Width="210" Height="60" Canvas.Left="0" Canvas.Top="0" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Rectangle Width="200" Height="50" Canvas.Left="5" Canvas.Top="5" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <TextBlock Text="Focus Opacity" FontSize="14" FontFamily="Arial Black" Foreground="White" Canvas.Top="10" Canvas.Left="15" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Slider x:Name="focusOpacity" Width="190" Canvas.Left="10" Maximum="100" Minimum="0" Value="25" Canvas.Top="32" HorizontalAlignment="Left" VerticalAlignment="Center" SmallChange="1"/>
            </Canvas>
        </Canvas>

    </Canvas>

    <Window.Resources>
        <Style x:Key="NoBGChange" TargetType="Button">
            <!--<Setter Property="Background" Value="{StaticResource ButtonImage}"></Setter>-->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                    Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Blue" />
                                <Setter Property="Cursor" Value="Hand" />
                                <!-- If we don't tell the background to change on hover, it will remain the same -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
